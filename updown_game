import random

num = 0
count = 0
cnt = count


while True:
    num = random.randint(1, 100)
    try:
        try:
            while True:
                enter = int(input("숫자를 입력하세요 "))
                if enter < num:
                    print("UP")
                    count += 1
                    continue
                elif enter > num:
                    print("DOWN")
                    count += 1
                    continue
                elif num < 1 or num > 100:
                    print("숫자범위는 1~100입니다. 다시 입력해주세요.")
                    continue
                else:
                    count += 1
                    print(f'정답입니다! 총{count}회 도전하셨어요')
                    if cnt < count:
                        cnt = count
                    print(f"최고 시도 횟수 : {cnt}")
                    break
        except ValueError:
            print("숫자로 입력해주세요.")
            continue

        while True:
            answer = input("게임을 다시 시작하기(Y/N) ")
            if answer == "Y" or answer == "y":
                print("게임을 다시 시작합니다!")
                count = 0
                break
            elif answer != "Y" and answer != "y" and answer != "N" and answer != "n":
                input("게임을 다시 시작하기(Y/N) ")
                continue
            elif answer == "N" or answer == "n":
                print("게임을 종료합니다.")
                raise
    except RuntimeError:
        break
